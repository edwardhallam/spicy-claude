# tagpr configuration for automated release PR generation

# Branch to track for releases
releaseBranch: main

# Enable changelog generation and updates
changelog: true

# Use "v" prefix for tags (v1.0.0, v1.0.1, etc.)
vPrefix: true

# Create GitHub Releases automatically
release: true

# Version file location
versionFile: backend/VERSION

# Command to generate initial version file if it doesn't exist
command: echo "0.1.3" > backend/VERSION

# Template for release notes (optional)
# Uses the changelog content by default