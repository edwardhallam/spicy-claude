{
  "tasks": {
    "dev": "deno run --allow-net --allow-run --allow-read --watch main.ts",
    "build": "deno compile --allow-net --allow-run --allow-read --output ../dist/claude-webui main.ts",
    "build:all": "deno task build:linux && deno task build:macos && deno task build:windows",
    "build:linux": "deno compile --allow-net --allow-run --allow-read --target x86_64-unknown-linux-gnu --output ../dist/claude-webui-linux-x64 main.ts",
    "build:macos": "deno compile --allow-net --allow-run --allow-read --target aarch64-apple-darwin --output ../dist/claude-webui-macos-arm64 main.ts",
    "build:windows": "deno compile --allow-net --allow-run --allow-read --target x86_64-pc-windows-msvc --output ../dist/claude-webui-windows-x64.exe main.ts",
    "format": "deno fmt",
    "lint": "deno lint",
    "check": "deno check main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/cli": "jsr:@std/cli@1",
    "hono": "jsr:@hono/hono@^4"
  }
}
