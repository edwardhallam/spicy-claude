# Spicy Claude - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# Slack Integration
# ============================================

# Slack webhook URL for automation notifications
# Get this from: Slack → Your Workspace → Apps → Incoming Webhooks
# Example: https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXX
SLACK_WEBHOOK_URL=

# ============================================
# Auto-Update Configuration
# ============================================

# Enable/disable automatic rollback on test failures (default: true)
# Set to "false" to require manual intervention when tests fail
AUTO_ROLLBACK_ENABLED=true

# Interval between update checks in seconds (default: 600 = 10 minutes)
# Note: LaunchAgent StartInterval also controls this
UPDATE_CHECK_INTERVAL=600

# ============================================
# Server Configuration
# ============================================

# Port for backend server (default: 8080)
# Production deployment uses 3002 via LaunchAgent
PORT=8080

# Host binding (default: 127.0.0.1 for dev, 0.0.0.0 for production)
# Use 127.0.0.1 for localhost-only access
# Use 0.0.0.0 to allow access from other devices on network
HOST=127.0.0.1

# ============================================
# GitHub Configuration (for Actions)
# ============================================

# These are automatically provided by GitHub Actions
# No need to set them locally

# GITHUB_TOKEN - Automatically provided by GitHub Actions
# Used for: Creating issues, pushing commits

# ============================================
# Development Configuration
# ============================================

# Enable debug logging (optional)
# DEBUG=true

# Node environment (optional, defaults to production)
# NODE_ENV=production
